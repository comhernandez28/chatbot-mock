{
	"extends": ["react-app", "plugin:prettier/recommended"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": [
			"error",
			{
				"printWidth": 80,
				"tabWidth": 4,
				"useTabs": true,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "es5",
				"bracketSpacing": true,
				"jsxBracketSameLine": false,
				"arrowParens": "avoid"
			}
		]
	}
}
